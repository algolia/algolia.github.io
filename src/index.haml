                    .mc-signupmessage
                    .mc-field-group
                    %input#mce-EMAIL.email.form-control{type: "text", name: "email", placeholder: "Your Email Address", type: "email"}/
                    %button.btn.btn-static-default.color-white{type: "submit"}
                      Subscribe

        .column
          %h4 Developer
          %ul
            %li
              %a{href: "https://www.algolia.com/doc/guides/getting-started/how-it-works/"} Getting Started
